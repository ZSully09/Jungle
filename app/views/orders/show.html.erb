<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>We appreciate your purchase! A confirmation email has been sent to <strong><%= @order.email %></strong>!</h4>
  </div>

  <div class="panel panel-default items">
      <table class="table table-bordered">
    <tbody>
      <% @order.line_items.each do |item| %>
        <%= render 'item', product: item.product, quantity: item.quantity %>
      <% end %>
    </tbody>
    <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100 %>
          </th>
        </tr>
    </tfoot>
  </table>
    </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
